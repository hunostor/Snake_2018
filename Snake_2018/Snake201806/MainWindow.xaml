<Window x:Class="Snake201806.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake201806"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Margin="60" x:Name="GamePlayTextBlock"
                   FontSize="20"
                   Visibility="Hidden"
                   HorizontalAlignment="Center"
                   >
            A játék indításához a nyíl gombok valamelyikével el kell indítani kígyó fejét.
        </TextBlock>
        <TextBlock x:Name="NumberOfMealsTextBlock"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Foreground="Gray"
                   FontSize="120"
                   Text="0"
                   Visibility="Hidden"
            >
            
        </TextBlock>
    </Grid>
</Window>
